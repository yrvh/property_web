<!-- 引入自定义的 全局组件, 实现绑定的导航功能 -->
<bind-house title="{{bindTitle}}" message="{{bindMessage}}" btn="{{bindBtn}}" bind:tapBindHouse="handleShowHouse"/>

<!-- 引入自定义的 全局组件, 实现无记录时的 提醒背景图 -->
<no-record wx:if="{{houseList.length==0}}"/>

<!-- 有记录时, 显示绑定完成的房间列表 -->
<block wx:else>
  <view class="payment-houseList"  wx:for="{{houseList.length}}" wx:key="{{index}}">
    <view class="payment-houseList-title">
      <text decode="{{true}}">|&ensp;</text>绑定房间信息
    </view>

    <view class="payment-houseList-content">
      <view class="payment-houseList-content-address">
        <text>我的小区:</text>
        <view>银河产业城</view>
      </view>
      <view class="payment-houseList-content-housenum">
        <text>房间号:</text>
        <view>3#303</view>
      </view>
      <view class="payment-houseList-content-name">
        <text>姓名:</text>
        <view>小张</view>
      </view>
      <view class="payment-houseList-content-tel">
        <text>电话号码:</text>
        <view>18600011000</view>
      </view>
    </view>
    
    <view class="payment-houseList-btn" bindtap="handleRemoveHouse">解除绑定</view>
  </view>
</block>

<!-- 绑定房间时 个人信息填写弹窗 -->
<gray-bg wx:if="{{showHouse}}" 
          bind:tapWindowClose="handleHouseClose"
          window-top="payment-house">
  <view class="payment-house-title">绑定房间</view>

  <view class="payment-house-content">
    <view class="payment-house-content-address">
      <text>我的小区:</text>
      <input/>
    </view>
    <view class="payment-house-content-housenum">
      <text>房间号:</text>
      <input/>
    </view>
    <view class="payment-house-content-name">
      <text>姓名:</text>
      <input/>
    </view>
    <view class="payment-house-content-tel">
      <text>电话号:</text>
      <input/>
    </view>
  </view>

  <view class="payment-house-message">
    <text>请正确填写信息: \n</text>
    <text>(1) 2栋303室填写格式为: 2#303 \n</text>
    <text decode="{{true}}">(2) 姓名, 电话号码为物业登记信息 \n &ensp;&ensp;&ensp;备注: 姓名, 电话如需更改, 请联系物业</text>
  </view>

  <view class="payment-house-btn" bindtap="handleHouseBtn">确定</view>
</gray-bg>


<!-- 个人信息提交时的 弹窗 -->
<gray-bg wx:if="{{showSuccess}}" 
          bind:tapWindowClose="handleSuccessClose"
          window-top="payment-showSuccess">
  <view class="payment-success" wx:if="{{bindSuccess}}">我是绑定成功页</view>
  <view class="payment-noSucc" wx:if="{{!bindSuccess}}">我是绑定失败页</view>
</gray-bg>


<!-- 解除 绑定房间的弹窗 -->
<gray-bg wx:if="{{showRemove}}" 
          bind:tapWindowClose="handleRemoveClose"
          window-top="payment-showRemove">
  <view class="payment-remove-message">您确定要解除绑定?</view>
  <view class="payment-remove-btn {{activeRemoveBtn==0? 'payment-remove-no':''}}"
        bindtap="handleNoRemove"
        data-num="0">取消
  </view>
  <view class="payment-remove-btn {{activeRemoveBtn==1? 'payment-remove-sure':''}}
        bindtap="handleSureRemove"
        data-num="1">确定
  </view>
</gray-bg>

