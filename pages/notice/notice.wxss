page {
  background-color: #EEEEEE;
}
.notice-body {
  position: relative;
  margin: 26rpx auto;
  width: 640rpx;
  height: 156rpx;
  padding: 30rpx;
  background-color: #fff;
}
.notice-body-title {
  float: left;
  font-size: 30rpx;
}
.notice-body-new {
  float: left;
  margin-left: 10rpx;
  position: relative;
  width: 56rpx;
  height: 30rpx;
  border: 1px solid #f8f8f8;
  border-radius: 15rpx;
  color: #f00;
  background-color: #FFEAEC;
}
.notice-body-newBG {
  position: absolute;
  top: 15rpx;
  float: left;
  width: 30rpx;
  height: 15rpx;
  background-color: #FFEAEC;
}
.notice-body-new text{
  position: absolute;
  left: 8rpx;
  z-index: 5;
  font-size: 22rpx;
}
.notice-body-date {
  width: 100%;
  line-height: 30rpx;
  float: left;
  font-size: 22rpx;
  color: #999;
}
.notice-body-content {
  float: left;
  width: 100%;
  height: 70rpx;
  margin-top: 26rpx;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-indent: 48rpx;
  word-break: break-all;
  overflow: hidden;
  /* white-space: nowrap; */
  text-overflow: ellipsis;
}
.notice-body-all {
  position: absolute;
  z-index: 2;
  right: 40rpx;
  bottom: 26rpx;
  font-size: 26rpx;
  color: #3ADEB4;
}