@import "/components/support/support.wxss";
.home-community-addr {
  background-color: #FF6D6D;
  height: 4.23vh;
  width: 100%;
  color: #ffffff;
  font-size: 28rpx;
  padding-left: 36rpx;
  line-height: 4.23vh;
}

.home-image {
  height: 25.07vh;
  width: 100%;
}

.home-link {
  width: 100%;
  height: 16.48vh;
  border-bottom: 1.41vh solid #EEEEEE;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.home-link-img{
  width: 9vh;
  height: 9vh;
  border-radius: 4.5vh;
}
.img-notice{
  background-color: #218BDB;
}
.img-payment{
  background-color: #17D2A2;
}
.img-repairs{
  background-color: #FD9E3F;
}
.img-binding{
  background-color: #FF6E6D;
}
.home-link-text{
  margin-top: 0.85vh;
  font-size: 28rpx;
  width: 9vh;
  text-align: center;
}

.home-newnotice{
  width: 100%;
  height: 5.49vh;
  border-bottom: 2rpx solid #EEEEEE;
  padding: 1.69vh 0;
}
.home-newnotice-title{
  float: left;
  width: 158rpx;
  line-height: 4.93vh;
  text-align: center;
  color: #FF6D6D;
  font-size: 30rpx;
}
.home-newnotice-content{
  float: right;
  height: 5.49vh;
  width: 542rpx;
  font-size: 24rpx;
  border-left: 2rpx solid #EEEEEE;
  padding: 0 24rpx;
}
.home-newnotice-content-date {
  float: right;
  color: #999999;
}

.home-intelligence {
  margin-top: 2.53vh;
  width: 100%;
  background-color: #FD9E3F;
}
.home-intelligence-title {
  font-size: 30rpx;
  margin-left: 28rpx;
}
.home-intelligence-title-icon {
  color: #FF6D6D;
}
.home-intelligence-content {
  margin-top: 2.39vh;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  background-color: #218BDB;
}
.home-intelligence-content-child {
  width: 24vh;
  height: 16vh;
  border-radius: 8rpx;
  padding: 1.1vh 0 0 2vh;
  color: #ffffff;
  font-size: 26rpx;
}
.bill{
  background-color: #FF6D6D;
}
.bill-text {
  font-size: 23rpx;
}
.repairs {
  background-color: #bad7ad;
}
.repairs-text {
  font-size: 23rpx;
}